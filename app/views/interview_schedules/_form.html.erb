<%= form_with(model: interview_schedule) do |form| %>
  <% if interview_schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(interview_schedule.errors.count, "error") %> prohibited this interview_schedule from being saved:</h2>

      <ul>
        <% interview_schedule.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field form-group">
    <% form.label :interviewer_id %>
    <%= form.collection_select(:interviewer_id, Interviewer.all, :id, :name, {:prompt => 'Select the interviewer'}, :selected => @interview_schedule.interviewer_id, class:"form-control" ) %>
  </div>
  <br>
  <div class="field form-group">
    <% form.label :interviewee_id %>
    <%= form.collection_select(:interviewee_id, Interviewee.all, :id, :name, {:prompt => 'Select the interviewee'}, :selected => @interview_schedule.interviewee_id, class:"form-control" ) %>
  </div>
  <br>
  <div class="field form-group">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>
  <br>
  <div class="field form-group">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time %>
  </div>
  <br>
  <div class="field form-group">
    <%= form.label :resume %>
    <%= form.file_field :resume, class:"form-control", :required => true %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit class:'btn btn-secondary' %>
  </div>
<% end %>
